{
  "compilerOptions": {
    "strict": true,
    "target": "es2018",
    "outDir": "./lib",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "./typings-custom/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
